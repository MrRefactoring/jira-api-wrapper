{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "interfaces/*": ["src/interfaces/*"],
      "utils/*": ["src/utils/*"]
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
